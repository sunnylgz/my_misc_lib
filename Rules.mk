#=============================================================================
#           compiler
#=============================================================================
CC=gcc
LD=gcc
AR=ar

#=============================================================================
#           build options
#=============================================================================
D=0
ifeq ($(D), 0)
CFLAGS= -O3
else
CFLAGS= -O0 -g -D_DEBUG=$(D)
endif
CFLAGS += $(EXT_CFLAGS)
ARFLAGS=
OPT_INCLUDE=
USR_LIBS=
LNFLAGS=# -lpthread -ldl -lm -lrt

